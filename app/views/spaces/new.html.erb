<div class="new-banner" style="background-image: linear-gradient(rgba(55, 63, 81,0.4),rgba(55, 63, 81,0.3)), url('https://res.cloudinary.com/tayloreaw/image/upload/v1605801866/vvk2uvr7axf8v05zafprx5athio2.jpg');">
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1 class="text-center">Add a space</h1>
      <p class="text-center">----------</p>
      <%= simple_form_for @space do |f| %>
         <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :address %>
          <%= f.input :price_per_day %>
          <%= f.input :description %>
          <%= f.input :floor_space %>
          <%= f.input :heating, inline_label: 'Heating' %>
          <%= f.input :internet, inline_label: 'Internet' %>
          <%= f.input :lighting, inline_label: 'Lighting' %>
          <%= f.input :availability_status, inline_label: 'Is this available?' %>
          <%= f.input :photo, as: :file %>
         </div>
         <div class="form-actions mb-2">
          <%= f.button :submit, class: "btn btn-flat"%>
         </div>
      <% end %>
      <br><br>
    </div>
  </div>
</div>
