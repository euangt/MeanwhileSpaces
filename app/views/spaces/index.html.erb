<h1>All of the spaces near you</h1>

<div class="container">
  <div class="row justify-content-center">
    <% @spaces.each do |space| %>
      <div class="col-8">
        <div>
          <p>Name: <%= link_to space.title, space_path(space) %></p>
          <p>Address: <%= space.address %>
          <p>For rent: <%= space.availability_status %>
          <p>Price: <%= space.price_per_day %>
        </div>
        <div>
          <% if space.photo.attached?  %>
            <%= cl_image_tag(space.photo.key, width: 200, height: 200, crop: :fill) %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="" width="200" height="200" alt="">
          <% end %>
        </div>
      </div>
      <div class="col-4">
        <h2>Map goes here</h2>
      </div>
    <% end %>
  </div>
</div>

<% if policy(Space).create? %>
  <%= link_to "New space", new_space_path %>
<% end %>
