<% if @space.photo.attached? %>
  <div class="edit-banner" style="background-image: linear-gradient(rgba(55, 63, 81,0.4),rgba(55, 63, 81,0.3)), url('<%= cl_image_tag @space.photo.key %>');">
  </div>
<% else %>
  <div class="edit-banner" style="background-image: linear-gradient(rgba(55, 63, 81,0.4),rgba(55, 63, 81,0.3)), url(https://res.cloudinary.com/tayloreaw/image/upload/v1605799990/xgimxvzie7c1gsl24xjm.jpg);">
  </div>
<% end %>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="container-edit">
        <div><%= link_to "< Back", space_path(@space) %></div>
        <h1 class="text-center">Update your space</h1>
       <!--  <p class="text-center">----------</p> -->
        <%= simple_form_for @space do |f| %>
           <div class="form-inputs">
            <%= f.input :title %>
            <%= f.input :address %>
            <%= f.input :price_per_day %>
            <%= f.input :description %>
            <%= f.input :floor_space %>
            <%= f.input :heating, inline_label: 'Heating' %>
            <%= f.input :internet, inline_label: 'Internet' %>
            <%= f.input :lighting, inline_label: 'Lighting' %>
            <%= f.input :availability_status, inline_label: 'Is this available?' %>
            <%= f.input :photo, as: :file %>
           </div>
           <div class="form-actions">
            <div><%= f.button :submit, class: "btn btn-flat"%></div>
           </div>
        <% end %>
<!--         <div><%= link_to "< cancel", space_path(@space), class: "btn btn-ghost" %></div> -->
      </div>
    </div>
  </div>
</div>
<br><br>
