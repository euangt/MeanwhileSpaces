<h1><%= @space.title %></h1>

<div class="container">
  <div class="row">
    <div class="col">
      <p>Name: <%= @space.title %></p>
      <p>About: <%= @space.description %></p>
      <p>Address: <%= @space.address %>
      <p>Available for rent: <%= @space.availability_status %>
      <p>Price: <%= @space.price_per_day %>
    </div>
    <div class="col">
      <p>Floor space: <%= @space.floor_space %></p>
      <p>Internet: <%= @space.internet %></p>
      <p>Heating: <%= @space.heating %></p>
      <p>Lighting: <%= @space.lighting %></p>
    </div>
  </div>
  <div>
    <h2>Map goes here</h2>
  </div>
  <div>
    <h2>Photos here</h2>
    <% if @space.photo.attached?  %>
            <%= cl_image_tag(@space.photo.key, width: 400, height: 300, crop: :fill) %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="" width="200" height="200" alt="">
          <% end %>
  </div>
</div>



<%= link_to "All spaces", spaces_path %>

  <% if policy(@space).edit? %>
    <%= link_to "Update", edit_space_path(@space) %>
  <% end %>

  <% if policy(@space).destroy? %>
    <%= link_to "Remove this space", space_path(@space), method: :delete, data: {confirm: 'Are you sure you want to renove this space?'}  %>
  <% end %>
