<div class="space-banner">
  <div class="container">
  </div>
</div>

<div class="container mt-3">
  <%= link_to "< Back", spaces_path %>
  <h1><%= @space.title %></h1>
  <p><em><%= @space.address %></em></p>

  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-6">
          <p><%= @space.description %></p>
          <p>Available for rent: <%= @space.availability_status %></p>
          <p>Price: Â£<%= @space.price_per_day %></p>
          <br><br>
        </div>
        <div class="col-4">
          <p>Floor space: <%= @space.floor_space %>sqm</p>
          <p>Internet: <%= @space.internet %></p>
          <p>Heating: <%= @space.heating %></p>
          <p>Lighting: <%= @space.lighting %></p>
          <br><br>
        </div>
      </div>
    </div>
    <% if @user_id == @space.user_id %>
    <div class="col-4">
      <div class="card-book">
          <h2 class="text-center">Book this Space</h2>
          <% if policy(Booking).create? %>
            <%= simple_form_for [@space, @booking] do |f| %>
              <div class="form-inputs">
                <%= f.input :start_date %>
                <%= f.input :end_date %>
              </div>
              <br>
              <div class="form-actions text-center">
                <%= f.button :submit, class: "btn btn-flat"%>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-6">
      <div class="card-image">
        <% if @space.photo.attached?  %>
          <%= cl_image_tag @space.photo.key, width: 560, height: 360, crop: :fill %>
        <% else %>
          <img src="https://source.unsplash.com/random/?stores" class="" width="560" height="360" alt="">
        <% end %>
      </div>
    </div>
  </div>

</div>

  <% if policy(@space).edit? %>
    <%= link_to "Update", edit_space_path(@space) %>
  <% end %>

  <% if policy(@space).destroy? %>
    <%= link_to "Remove this space", space_path(@space), method: :delete, data: {confirm: 'Are you sure you want to renove this space?'}  %>
  <% end %>

  <div>
    <h2>Map goes here</h2>
  </div>
